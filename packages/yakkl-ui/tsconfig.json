{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["svelte"],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.svelte"]
}