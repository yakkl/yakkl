{
  "name": "@yakkl/web3-utils",
  "version": "0.1.0",
  "description": "Web3 and blockchain utilities for YAKKL ecosystem",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "web3",
    "blockchain",
    "ethereum",
    "crypto",
    "utilities"
  ],
  "author": "YAKKL",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "tsup": "^8.5.0",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "ethers": "^5.7.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "ethers": {
      "optional": true
    }
  }
}