{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"$base": ["src"],
			"$base/*": ["src/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$plugins": ["src/lib/plugins"],
			"$plugins/*": ["src/lib/plugins/*"],
			"$components": ["src/lib/components"],
			"$components/*": ["src/lib/components/*"],
			"$routes": ["src/routes"],
			"$routes/*": ["src/routes/*"],
			"$managers": ["src/lib/managers"],
			"$managers/*": ["src/lib/managers/*"],
			"$contexts": ["src/contexts"],
			"$contexts/*": ["src/contexts/*"],
			"$static": ["src/static"],
			"$static/*": ["src/static/*"],
			"@yakkl/security-ui": ["../yakkl-security-ui/src/lib/index.ts"],
			"@yakkl/security-ui/*": ["../yakkl-security-ui/src/lib/*"],
			"@yakkl/*": ["./packages/*/src"]
		},
		"verbatimModuleSyntax": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": false,
		"resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
		"types": ["svelte", "webextension-polyfill", "vite/client", "node", "@sveltejs/kit"]
	},
	"include": [
		"src",
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"src/lib/browser-polyfill.d.ts",
		"src/**/*.svelte"
	],
	"exclude": ["**/node_modules/**", "../../node_modules", "node_modules", "dist", "build"]
}
