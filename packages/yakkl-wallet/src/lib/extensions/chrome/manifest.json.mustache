{
  "name": "__MSG_extensionName__",
  "short_name": "YAKKL®",
  "description": "The YAKKL® Super App - Smart Wallet with advanced security, builtin information hub, next generation user experience, and a sophisticated guardian of your Crypto & Digital Assets.",
  "version": "{{version}}",
  "manifest_version": 3,
  "author": "YAKKL Inc",
  "default_locale": "en",
  "homepage_url": "https://yakkl.com/?utm_source=chrome_store",
  "host_permissions": [
    "http://localhost:8545/",
    "file://*/*",
    "http://*/*",
    "https://*/*",
    "ws://*/*",
    "wss://*/*",
    "https://deepnewz.com/*",
    "https://cointelegraph.com/*",
    "https://www.coindesk.com/*",
    "https://cryptonews.com/*",
    "https://bitcoinmagazine.com/*",
    "https://decrypt.co/*",
    "https://www.cnbc.com/*",
    "https://cryptopotato.com/*",
    "https://www.cryptobreaking.com/*",
    "https://cryptoslate.com/*",
    "https://thedefiant.io/*"
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    "background",
    "idle",
    "alarms",
    "tabs",
    "activeTab",
    "sidePanel",
    "windows",
    "contextMenus"
  ],
  "sandbox": {
    "pages": ["sandbox.html"]
  },
  "side_panel": {
    "default_path": "/sidepanel/sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "/images/logoBullLock16x16.png",
      "32": "/images/logoBullLock32x32.png",
      "48": "/images/logoBullLock48x48.png",
      "96": "/images/logoBullLock96x96.png",
      "128": "/images/logoBullLock128x128.png"
    },
    "theme_icons": [
      {
        "light": {
          "16": "/images/logoBullLock16x16.png",
          "32": "/images/logoBullLock32x32.png",
          "48": "/images/logoBullLock48x48.png",
          "96": "/images/logoBullLock96x96.png",
          "128": "/images/logoBullLock128x128.png"
        },
        "dark": {
          "16": "/images/logoBullLock-BW16x16.png",
          "32": "/images/logoBullLock-BW32x32.png",
          "48": "/images/logoBullLock-BW48x48.png",
          "96": "/images/logoBullLock-BW96x96.png",
          "128": "/images/logoBullLock-BW128x128.png"
        },
        "size": "16"
      },
      {
        "light": {
          "32": "/images/logoBullLock32x32.png"
        },
        "dark": {
          "32": "/images/logoBullLock-BW32x32.png"
        },
        "size": "32"
      },
      {
        "light": {
          "48": "/images/logoBullLock48x48.png"
        },
        "dark": {
          "48": "/images/logoBullLock-BW48x48.png"
        },
        "size": "48"
      },
      {
        "light": {
          "96": "/images/logoBullLock96x96.png"
        },
        "dark": {
          "96": "/images/logoBullLock-BW96x96.png"
        },
        "size": "96"
      },
      {
        "light": {
          "128": "/images/logoBullLock128x128.png"
        },
        "dark": {
          "128": "/images/logoBullLock-BW128x128.png"
        },
        "size": "128"
      }
    ],
  {{#isSidepanel}}
    "default_title": "YAKKL® Smart Wallet"
  {{/isSidepanel}}
  {{#isPopup}}
    "default_title": "YAKKL® Smart Wallet",
    "default_popup": "/popup/popup.html"
  {{/isPopup}}
  },
  "externally_connectable": {
    "matches": ["https://yakkl.com/*"]
  },
  "background": {
    "service_worker": "/js/background-wrapper.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "/ext/browser-polyfill.js",
        "/ext/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "/ext/browser-polyfill.js",
      "/sidepanel.html",
      "/sandbox.html",
      "background.js",
      "/ext/inpage.js",
      "/js/data/lists.json",
      "/data/uniswap.json",
      "/index.html",
      "*.jpg",
      "*.png",
      "*.js",
      "*.json"
      ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "/images/logoBullLock16x16.png",
    "32": "/images/logoBullLock32x32.png",
    "48": "/images/logoBullLock48x48.png",
    "96": "/images/logoBullLock96x96.png",
    "128": "/images/logoBull128x128.png"
  },
  "omnibox": {
    "keyword": "crypto wallet secure ethereum bitcoin yakkl blockchain digital"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      },
      "description": "Opens YAKKL® Smart Wallet"
    },
    "logout": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Logout from YAKKL® Smart Wallet"
    },
    "exit": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Exit YAKKL® Smart Wallet"
    }
  },
 "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; frame-ancestors 'none';",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-inline' 'unsafe-eval'; object-src 'none'; default-src 'none'; connect-src *; font-src 'self';"
  },
  "externally_connectable": {
    "matches": [
      "https://yakkl.com/*"
    ],
    "ids": ["*"]
  },
  "minimum_chrome_version": "131"
}
