{
	"extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
		"verbatimModuleSyntax": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false, // False
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noEmit": false,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		// "downlevelIteration": true,
		"strict": false,
		"strictNullChecks": false,
		"noImplicitAny": false,
		// "strictPropertyInitialization": true,
		"target": "ESNext",
		"module": "ESNext",
    "types": ["chrome", "svelte", "vite/client", "node", "@sveltejs/kit"]
  },
	"include": [
		"./src",
		"./src/**/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.js",
		"./src/**/*.svelte",
		"./src/**/*.svelte"
	],
	"exclude": ["**/node_modules/**", "**v1**", "dist", "./src/lib/browser-polyfill-wrapper.ts", "./src/lib/polyfill-mock.js", "./src/lib/crypto-ssr-mock.js", "./src/routes/lib.tmp/**", "**/*.tmp"]
}
