{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"],
			"$base": ["./src"],
			"$base/*": ["./src/*"],
			"$static": ["./src/static"],
			"$static/*": ["./src/static/*"],
			"$components": ["./src/lib/components"],
			"$components/*": ["./src/lib/components/*"],
			"$routes": ["./src/routes"],
			"$routes/*": ["./src/routes/*"],
			"$managers": ["./src/lib/managers"],
			"$managers/*": ["./src/lib/managers/*"],
			"$plugins": ["./src/lib/plugins"],
			"$plugins/*": ["./src/lib/plugins/*"],
			"$contexts": ["./src/contexts"],
			"$contexts/*": ["./src/contexts/*"],
			"@yakkl/security-ui": ["../yakkl-security-ui/src/lib/index.ts"],
			"@yakkl/security-ui/*": ["../yakkl-security-ui/src/lib/*"]
		},
		"verbatimModuleSyntax": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false, // False
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noEmit": false,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		// "downlevelIteration": true,
		"strict": false,
		"strictNullChecks": false,
		"noImplicitAny": false,
		// "strictPropertyInitialization": true,
		"target": "ESNext",
		"module": "ESNext",
		"types": ["chrome", "svelte", "vite/client", "node", "@sveltejs/kit"]
	},
	"include": [
		"./src",
		"./src/**/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.js",
		"./src/**/*.svelte",
		"./src/**/*.svelte"
	],
	"exclude": ["**/node_modules/**", "**v1**", "dist", "./src/lib/browser-polyfill-wrapper.ts", "./src/lib/polyfill-mock.js", "./src/lib/crypto-ssr-mock.js", "./src/routes/lib.tmp/**", "**/*.tmp"]
}
