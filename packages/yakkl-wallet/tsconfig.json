{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$managers": ["src/lib/managers"],
			"$managers/*": ["src/lib/managers/*"],
			"$plugins": ["src/lib/plugins"],
			"$plugins/*": ["src/lib/plugins/*"],
			"$components": ["src/lib/components"],
			"$components/*": ["src/lib/components/*"],
			"$contexts": ["src/contexts"],
			"$contexts/*": ["src/contexts/*"],
			"@yakkl/*": ["./packages/*/src"],
			"lucide-svelte/icons/*": ["node_modules/lucide-svelte/dist/icons/*"]
		},
		"verbatimModuleSyntax": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false, // False
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noEmit": false,
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		// "downlevelIteration": true,
		"strict": false,
		"strictNullChecks": false,
		"noImplicitAny": false,
		// "strictPropertyInitialization": true,
		"target": "ESNext",
		"module": "ESNext",
		"types": ["chrome", "svelte", "vite/client", "node", "@sveltejs/kit"]
	},
	"include": [
		"src",
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.svelte",
		"src/lib/browser-polyfill.d.ts",
		"src/**/*.svelte"
	],
	"exclude": ["**/node_modules/**", "dist", "src/lib/polyfill-mock.js", "src/lib/crypto-ssr-mock.js", "src/routes/lib.tmp/**", "**/*.tmp"]
}
