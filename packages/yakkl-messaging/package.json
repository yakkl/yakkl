{
  "name": "@yakkl/messaging",
  "version": "0.1.0",
  "description": "Universal messaging infrastructure for browser extensions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@yakkl/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/chrome": "^0.0.326",
    "@types/webextension-polyfill": "^0.12.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "keywords": [
    "yakkl",
    "messaging",
    "browser-extension",
    "message-passing",
    "port-communication"
  ],
  "author": "YAKKL",
  "license": "MIT"
}