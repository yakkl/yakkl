{
  "name": "@yakkl/browser-extension",
  "version": "0.1.0",
  "description": "Browser extension abstractions and utilities for YAKKL",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./manifest": {
      "types": "./dist/manifest.d.ts",
      "import": "./dist/manifest.js",
      "require": "./dist/manifest.cjs"
    },
    "./messaging": {
      "types": "./dist/messaging.d.ts",
      "import": "./dist/messaging.js",
      "require": "./dist/messaging.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "dependencies": {
    "@yakkl/core": "workspace:*",
    "@yakkl/auth": "workspace:*",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/webextension-polyfill": "^0.10.7",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "keywords": [
    "yakkl",
    "browser",
    "extension",
    "chrome",
    "firefox",
    "manifest-v3"
  ],
  "author": "YAKKL",
  "license": "MIT"
}